<div class="w-full flex flex-col items-center">
  <div class="w-80">
    <h2 class="text-slate-700 text-2xl font-semibold text-center mb-6">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :email, class: "block text-base font-medium text-slate-500 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
      </div>

      <div class="field mb-4">
        <div>
          <%= f.label :password, class: "text-base font-medium text-slate-500 mb-2" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, class: "block text-base font-medium text-slate-500 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
      </div>

      <div class="actions mt-6">
        <%= f.submit "Sign up", class: "w-full h-max text-white bg-liberty cursor-pointer border-2 border-transparent text-lg font-semibold px-4 py-2 rounded-lg hover:shadow-xl hover:ring-offset-2 hover:ring hover:ring-liberty focus:text-white focus:bg-liberty" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>