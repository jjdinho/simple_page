<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "placeholder:text-slate-400 text-lg shadow appearance-none border border-slate-300 rounded-lg w-full px-4 py-2 text-slate-700 focus:outline-none focus:border-liberty-500" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
