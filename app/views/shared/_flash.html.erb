<% if kind == :notice %>
  <div data-controller="flash-notification" class="max-w-xs mb-4 flex rounded-lg p-4 bg-green-100 border border-green-300 shadow-lg">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 stroke-green-600 float-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <p class="ml-2"><%= raw(content) %></p>
  </div>
<% elsif kind == :info %>
  <div data-controller="flash-notification" class="max-w-xs mb-4 flex rounded-lg p-4 bg-gray-100 border border-gray-300 shadow-lg">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 stroke-gray-400 float-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <p class="ml-2"><%= raw(content) %></p>
  </div>
<% elsif kind == :alert %>
  <div data-controller="flash-notification" class="max-w-xs mb-4 flex rounded-lg p-4 bg-rose-100 border border-rose-300 shadow-lg">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 stroke-rose-500 float-left" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <p class="ml-2"><%= raw(content) %></p>
  </div>
<% end %>