    <div class="fixed top-0 right-0 left-0 z-40 h-screen w-screen" style="background-color: rgba(51, 65, 85, 0.5);" onclick="this.closest('#preview_modal_inner').remove()"></div>
    <div class="relative p-4 w-full max-w-full h-full md:h-auto z-50">
      <div class="relative bg-white rounded-lg shadow">
        <button type="button" onclick="this.closest('#preview_modal_inner').remove()" class="absolute top-2 right-2.5 text-slate-400 bg-transparent hover:bg-slate-200 hover:text-slate-900 rounded-lg text-sm p-2 ml-auto inline-flex items-center" data-modal-toggle="popup-modal">
