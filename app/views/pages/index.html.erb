<div class="mt-4">

  <div class="w-full mb-4 flex items-end justify-between">
    <h1 class="block font-bold text-slate-500 text-xl float-left">My pages</h1>
    <% if @pages.any? %>
      <%= link_to 'New page', pages_new_path, disabled: true, class: "w-max h-max text-white bg-liberty cursor-pointer border-2 border-transparent text-lg font-semibold px-4 py-2 rounded-lg hover:shadow-xl hover:ring-offset-2 hover:ring hover:ring-liberty focus:text-white focus:bg-liberty" %>
    <% end %>
  </div>




  <table class="mb-8 shadow-xl table-fixed w-full border-collapse">
    <thead class="font-medium text-base bg-slate-200">
    <tr>
      <td class="rounded-tl-lg border-b border-slate-200 px-4 py-2">Page name</td>
      <td class="border-b border-slate-200 px-4 py-2">Size</td>
      <td class="hidden md:table-cell border-b border-slate-200 px-4 py-2">Created</td>
      <td class="hidden sm:table-cell border-b border-slate-200 px-4 py-2">Updated</td>
      <td class="rounded-tr-lg border-b border-slate-200 px-4 py-2"></td>
    </tr>
    </thead>
    <tbody class="text-lg">
    <% if @pages.any? %>
      <% @pages.each do |page| %>
      <tr id="<%= dom_id(page) %>">
        <td class="border-b border-slate-200 p-4">
          <%= link_to page.name, page.path, target: :_blank, data: { turbo: false }, class: "font-semibold underline hover:text-slate-500" %>
        </td>
        <td class="border-b border-slate-200 p-4 text-slate-700"><%= number_to_human_size(page.size) %></td>
        <td class="hidden md:table-cell border-b border-slate-200 p-4 text-slate-700"><%= time_ago_in_words(page.created_at) %> ago</td>
        <td class="hidden sm:table-cell border-b border-slate-200 p-4 text-slate-700"><%= time_ago_in_words(page.updated_at) %> ago</td>
        <td class="border-b border-slate-200 p-4 ml-auto">
          <div class="flex items-center justify-end">
            <%= link_to pages_edit_path(page.id), class: 'text-slate-400 hover:text-slate-500 font-medium flex justify-center items-center mr-12' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <span class="underline">Edit</span>
            <% end %>
            <%= link_to pages_show_confirmation_modal_for_delete_path(page.id), data: { turbo_frame: :modal }, class: 'text-red-200 hover:text-red-500 font-medium flex justify-center items-center' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td rowspan="6" colspan="5" class="h-40">
          <div class="flex justify-center items-center">
            <%= link_to 'Create a new page', pages_new_path, class: "w-max h-max text-white bg-liberty cursor-pointer border-2 border-transparent text-lg font-semibold px-4 py-2 mr-2 rounded-lg hover:shadow-xl hover:ring-offset-2 hover:ring hover:ring-liberty focus:text-white focus:bg-liberty" %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
